.edit{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.avatar-wrapper{
  width: 112rpx;
  height: 112rpx;
  padding: 0;
  margin: 100rpx 0;
}
.avatar{
  width: 100%;
  height: 100%;
}
.nickname{
  display: flex;
  width: 100%;
  border: 1rpx #eee solid;
  height: 80rpx;
  align-items: center;
}
.lable{
  width: 15%;
  margin-left: 20rpx;
}
.nickname input{
  flex: 1;
  height: 100%;
  border-left: 1px #eee solid;
  padding-left: 30rpx;
}
.btns{
  width: 100%;
  display: flex;
  margin-top: 100rpx;
}