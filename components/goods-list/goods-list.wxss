/* components/goods-list/goods-list.wxss */
.goods-list{
  margin-bottom: 20rpx;
}
.goods-like{
  width: 100%;
  height: 80rpx;
  font-weight: bold;
  font-size: 36rpx;
  text-align: center;
  line-height: 80rpx;
}

.goods-more{
  width: 100%;
  height: 60rpx;
  background: #fff;
  font-weight: bold;
  text-align: center;
  line-height: 60rpx;
  border-radius: 50rpx;
}
.goods{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.goods::after{
  content: "";
  width: 350rpx;
}